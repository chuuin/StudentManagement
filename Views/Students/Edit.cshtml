@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "編輯學生資料";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4">編輯學生資料</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <!-- 隱藏欄位 Id -->
        <input type="hidden" asp-for="Id" />

        <!-- 姓名 -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label">姓名</label>
            <input asp-for="Name" class="form-control" placeholder="請輸入學生姓名" required />
            <div class="invalid-feedback">
                請輸入學生姓名
            </div>
        </div>

        <!-- 年齡 -->
        <div class="mb-3">
            <label asp-for="Age" class="form-label">年齡</label>
            <input asp-for="Age" type="number" class="form-control" placeholder="請輸入學生年齡" required />
            <div class="invalid-feedback">
                請輸入學生年齡
            </div>
        </div>

        <!-- 信箱 -->
        <div class="mb-3">
            <label asp-for="Email" class="form-label">信箱</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="請輸入學生信箱" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- 送出按鈕 -->
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">儲存</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">取消</a>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Bootstrap 表單驗證
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
